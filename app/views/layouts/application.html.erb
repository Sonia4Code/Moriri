<!DOCTYPE html>
<html>
  <head>
    <title>Moriri</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans" rel="stylesheet"> 
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="google-site-verification" content="HzjVqjf0hUgX8YMkfgNJuG-hb0YPGuEda0YhIn7Su4M" />
    
  </head>

  <body>
    <!-- NAVBAR -->
    <nav class="navbar fixed-top navbar-expand-md">
      <a href="#" class="col-xs-4 navbar-brand"><%= link_to(image_tag("logo_avatar.png", class:"brands", id: "logo", title: "Home"), root_path) %></a>
        <ul class=" col-xs-4 navbar-nav mx-auto" id="wordmark_ul">
          <li class="nav-item"><a href="#" class="nav-link"><%= image_tag("wordmark.png", id:"img-wordmark") %></a></li>
        </ul>
        <!-- DROPDOWN -->
        <div class="btn-group dropleft">
        <button type="button" class="btn btn-secondary"  id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <span class="navbar-toggler-icon">
                <%= image_tag("menu.png", class: "img-nav", id: "menu", title: "Menu") %>
            </span>

        </button>
        <div class="dropdown-menu">
            <span style="color: #0E2A36"><%= link_to "About", '/about', class:"dropdown-item" %></span>          
          <% if current_user %>
            <span style="color: #0E2A36"><%= link_to "My Profile", '/profile', class:"dropdown-item" %></span>
            <span style="color: #0E2A36"><%= link_to "Find Salon", '/salons', class:"dropdown-item" %></span>
                <span style="color: #0E2A36"><%= link_to "Log Out", '/logout', class:"dropdown-item" %></span>  
              <% else %>
                <span style="color: #0E2A36"><%= link_to "Find Salon", '/salons', class:"dropdown-item" %></span>
                <span style="color: #0E2A36"><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class:"dropdown-item" %></span>
                <!-- <span style="color: #0E2A36"><%#= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class:"dropdown-item" %></span> -->
              <% end %>
        </div>
      </div>
      <!-- <div></div> -->
    </nav>

<!-- FLASH MESSAGES -->
  <%= render partial: '/shared/flash', object: @salons %>

  <%= yield %>

<div class="footer">
  <div class="row justify-content-md-center">
    <div class="col"></div>
   <div class="col"><p id="foot">Â© Moriri 2019</p></div>
    <div class="col"></div>

</div>



  </body>
</html>
